# ========================================
# Flask 설정
# ========================================
FLASK_ENV=development
# production, development, testing

SECRET_KEY=dev-secret-key-change-in-production
# [중요!] 메인 프로젝트(mbizsquare.com)와 반드시 동일한 SECRET_KEY 사용
# 동일하지 않으면 세션 공유가 되지 않습니다!
# 강력한 랜덤 키 생성: python -c "import secrets; print(secrets.token_urlsafe(32))"


# ========================================
# 데이터베이스 (MariaDB)
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=mbizsquare

# 연결 풀 설정
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20


# ========================================
# OpenAI API (선택적)
# ========================================
OPENAI_API_KEY=
# sk-your-api-key-here

AI_INSIGHTS_ENABLED=false
# true: AI 인사이트 활성화, false: 비활성화 (비용 절감)


# ========================================
# 파일 업로드
# ========================================
MAX_FILE_SIZE_MB=10
# 최대 파일 크기 (MB)

UPLOAD_FOLDER=uploads
# 업로드 파일 임시 저장 경로


# ========================================
# 세션
# ========================================
SESSION_TYPE=filesystem
# filesystem, redis (운영 환경에서는 redis 권장)

SESSION_FILE_DIR=flask_session
# 파일 기반 세션 저장 디렉토리

SESSION_PERMANENT=false
# 영구 세션 여부

PERMANENT_SESSION_LIFETIME=3600
# 세션 만료 시간 (초), 3600 = 1시간

SESSION_COOKIE_SECURE=false
# HTTPS only (운영 환경에서는 true)

SESSION_COOKIE_HTTPONLY=true
# JavaScript 접근 차단 (XSS 방지)

SESSION_COOKIE_SAMESITE=Lax
# CSRF 방지 (Lax, Strict, None)

SESSION_COOKIE_DOMAIN=.mbizsquare.com
# [중요!] 세션 쿠키 도메인 - 서브도메인 간 세션 공유를 위해 점(.)으로 시작
# 개발환경에서는 빈 값으로 설정 (localhost)


# ========================================
# 메인 사이트 설정 (세션 공유)
# ========================================
MAIN_SITE_URL=https://mbizsquare.com
# 메인 사이트 URL

MAIN_LOGIN_URL=https://mbizsquare.com/login
# [중요!] 메인 프로젝트 로그인 페이지 URL
# 세션이 없거나 만료된 경우 이 URL로 리다이렉트됩니다
# TODO: 실제 메인 프로젝트의 로그인 URL로 변경 필요


# ========================================
# CORS 설정
# ========================================
CORS_ORIGINS=https://mbizsquare.com
# 허용할 Origin (쉼표로 구분)


# ========================================
# 로깅
# ========================================
LOG_LEVEL=INFO
# DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FILE=logs/app.log
# 로그 파일 경로

LOG_MAX_BYTES=10485760
# 로그 파일 최대 크기 (10MB)

LOG_BACKUP_COUNT=5
# 백업 파일 개수


# ========================================
# Redis (선택적, 세션 스토어용)
# ========================================
REDIS_URL=redis://localhost:6379/0
# Redis 연결 URL (SESSION_TYPE=redis 사용 시)


# ========================================
# Gunicorn 설정 (Docker 배포 시)
# ========================================
GUNICORN_WORKERS=4
# 워커 프로세스 수 (기본: CPU 코어 * 2 + 1)

GUNICORN_TIMEOUT=120
# 요청 타임아웃 (초, OpenAI API 호출 고려)

GUNICORN_WORKER_CLASS=sync
# 워커 클래스 (sync, gevent)

GUNICORN_LOG_LEVEL=info
# 로그 레벨 (debug, info, warning, error, critical)


# ========================================
# MariaDB 설정 (Docker 배포 시)
# ========================================
DB_ROOT_PASSWORD=your-root-password-here
# MariaDB 루트 비밀번호 (Docker 컨테이너 초기화 시 사용)


# ========================================
# 기타
# ========================================
TIMEZONE=Asia/Seoul
# 타임존 설정

DEBUG=false
# 디버그 모드 (프로덕션에서는 반드시 false)
